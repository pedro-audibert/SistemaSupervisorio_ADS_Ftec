@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@* Título padronizado para h4, alinhado com as outras páginas. *@
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

@* Adicionado contêiner com margem superior (mt-4) para espaçamento consistente. *@
<div class="mt-4">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Username" class="form-control" disabled />
            @* MELHORIA: Corrigido o texto da label para corresponder ao campo. *@
            <label asp-for="Username" class="form-label">Nome de usuário (não pode ser alterado)</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Por favor, insira seu telefone." />
            <label asp-for="Input.PhoneNumber" class="form-label"></label>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.TelegramChatId" class="form-control" placeholder="Insira o seu ID do Chat do Telegram" />
            <label asp-for="Input.TelegramChatId" class="form-label"></label>
            <span asp-validation-for="Input.TelegramChatId" class="text-danger"></span>

            <span class="form-text text-muted" style="padding-left: 0.25rem;">
                <small>
                    Para receber notificações:
                    <ol style="margin-bottom: 0; margin-top: 5px; padding-left: 1.5rem;">
                        <li>Inicie o chat com o bot <a href="https://t.me/MmdbaSupBot" target="_blank">clicando aqui</a> (e clique em "Start").</li>
                        <li>Obtenha o seu ID com o bot <strong>@@UserInfoToBot</strong>.</li>
                        <li>Cole o seu ID (apenas o número) no campo acima.</li>
                    </ol>
                </small>
            </span>
        </div>
        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}