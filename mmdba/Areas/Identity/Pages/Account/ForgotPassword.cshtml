@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">

                <div class="text-center mb-4">
                    @* Reutilizando o mesmo logo da tela de login. *@
                    <img src="~/images/logo.png" alt="Logo" style="max-width: 200px; height: auto;" />
                    <h1 class="h3 mt-3 mb-1 fw-normal">@ViewData["Title"]</h1>
                    <p class="text-muted">Insira seu e-mail para receber o link de redefinição.</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    @* Aplicando o mesmo estilo 'form-floating' para consistência. *@
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-primary">Redefinir Senha</button>
                </form>

                <div class="mt-4 text-center">
                    <p>
                        <a asp-page="./Login">Voltar para o Login</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}